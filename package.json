{
  "name": "learn-react-hooks",
  "title": "React Hooks",
  "private": true,
  "version": "1.0.0",
  "description": "The best resources for you to learn React Hooks",
  "keywords": [],
  "homepage": "https://learn-react-hooks.netlify.com/",
  "main": "src/index.js",
  "license": "GPLv3",
  "engines": {
    "node": ">=8",
    "npm": ">=6",
    "yarn": ">=1"
  },
  "dependencies": {
    "@reach/router": "^1.2.1",
    "@testing-library/jest-dom": "^4.1.2",
    "@testing-library/react": "^9.3.0",
    "history": "^4.10.1",
    "preval.macro": "^3.0.0",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "vanilla-tilt": "^1.7.0"
  },
  "devDependencies": {
    "cross-spawn": "^7.0.1",
    "husky": "^3.0.9",
    "inquirer": "^7.0.0",
    "is-ci": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "react-scripts": "3.2.0",
    "replace-in-file": "^4.1.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test:coverage": "npm run test -- --watchAll=false --coverage",
    "test:exercises": "npm run test -- testing.*exercises\\/ --onlyChanged",
    "setup": "node ./scripts/setup && npm run validate && node ./scripts/autofill-feedback-email.js",
    "lint": "eslint .",
    "validate": "npm-run-all --parallel build test:coverage lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/exercises-final/**/*.js"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 2 edge versions"
    ],
    "production": [
      ">1%",
      "last 4 versions",
      "Firefox ESR",
      "not ie < 11"
    ]
  }
}
